<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="240dp"
        android:layout_height="37dp"
        android:onClick="onButtonTapped"
        android:text="Homeへ（とりあえず用意した）"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="223dp"
        android:layout_height="89dp"
        android:text="筋トレアプリ"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="アカウントでログイン・登録"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="211dp" />

<!--  android:textAllCaps="false"は大文字小文字の区別  -->
    <Button
        android:id="@+id/button2"
        android:layout_width="174dp"
        android:layout_height="58dp"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="293dp"
        tools:text="Sign in with Google" />

    <Button
        android:id="@+id/button4"
        android:layout_width="174dp"
        android:layout_height="58dp"
        android:background="#7203A9F4"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="394dp"
        tools:text="Twitterでログイン" />

    <Button
        android:id="@+id/button5"
        android:layout_width="174dp"
        android:layout_height="58dp"
        android:background="#03A9F4"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="506dp"
        tools:text="Facebookでログイン" />
</androidx.constraintlayout.widget.ConstraintLayout>